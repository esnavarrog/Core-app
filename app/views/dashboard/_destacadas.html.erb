
<div id="gallery-destacadas" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <% @destacadas.each_with_index do |img, i| %>
            <button type="button" data-bs-target="#gallery-destacadas"
                data-bs-slide-to="<%= i %>" class="<%= i == 0 ? 'active' : '' %>" aria-current="true" 
                aria-label="Slide <%= i %>">
                <%= image_tag(img.avatar_url(:thumb), class:'bottom-carrousel') %>
            </button>
        <%end%>
    </div>
    <div class="carousel-inner">
        <% @destacadas.each_with_index do |img, i| %>
            <div class="carousel-item <%= i == 0 ? 'active' : '' %>">
                <%= link_to image_tag(img.avatar_url(:medium), class:'d-block w-100 img-carousel'), img %>
                <div class="carousel-caption d-md-block">
                    <h5><%= img.name.titleize %></h5>
                </div>
            </div>

        <%end%>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#gallery-destacadas" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#gallery-destacadas" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>