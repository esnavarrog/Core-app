<% if action_name == "index" %>
$('#box-posts').html('<%= j render @posts %>')
$('.paginate').html('<%= j paginate @posts, theme:"bootstrap-5", pagination_class: "pagination flex-wrap justify-content-center", nav_class: "d-inline-block", remote:true %>')
<%else%>
$('#box-posts').append('<%= j render @posts %>')
$('#paginate-posts').html('<%= j paginate @posts, theme:"bootstrap-5", pagination_class: "pagination flex-wrap justify-content-center", nav_class: "d-inline-block", remote:true %>')
<%end%>

window.scrollTo(0, 0);

var array = $('.video-js')
for(var i=0; i < array.length; i++){
   let element = array[i]
   if(element.id){
      videojs(element.id, {}, function(){
         this.load();
      });
   }
}