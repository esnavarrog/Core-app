<%= form_with(model: [@girl, @post], data:{remote: true}) do |f| %>
    <div class="modal-body">
        <div class="form-group">
            <%= f.rich_text_area :content, class:'form-control' %>
        </div>

        <div class="d-flex justify-content-between mt-2 ">
            <%= f.label :video, class:'btn btn-outline-primary button-upload d-flex align-items-center justify-content-center me-1' do %>
                <i class="bi bi-film"></i>
            <% end %>
            <%= f.file_field :video, class:'d-none' %>
        
            
            <%= f.label :img, class:'btn btn-outline-primary button-upload d-flex align-items-center justify-content-center' do %>
                <i class="bi bi-camera-fill"></i>
                
            <% end %>
            <%= f.file_field :img, class:'d-none' %>
        </div>
    </div>
    <div class="modal-footer">
        <%= f.submit 'Publicar', class:'btn btn-primary' %>

    </div>
<% end %>
