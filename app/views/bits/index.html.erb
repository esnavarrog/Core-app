<%= render './partials/header' %>
<div class="content-row">

</div>
<div class="container bg-white rounded shadow-sm p-2">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID PUBLICACIÃ“N</th>
                <th>FECHA PUB.</th>
                <th>VALOR BITS</th>
                <th>CANT. VENTAS</th>
                <th>TIPO CONTENIDO</th>
                <th>ESTADO</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% @amount.each do |post| %>
                <tr>
                    <td><%= post.id %></td>
                    <td><%= format_date post.created_at %></td>
                    <td><%= post.price %></td>
                    <td><%= post.bits.count %></td>
                    <td>
                        <% if post.video.present? %>
                            Video
                        <% elsif post.img.present? %>
                            Imagen
                        <% else %>
                            Solo Texto
                        <% end %>
                    </td>
                    <td><%= post.try(:status) %></td>
                    <td>
                        <%= link_to bits_de_publicacion_path(id:post), class:'btn btn-link shadow-none', remote:true do %>
                            <i class="bi bi-chevron-down"></i>
                        <% end %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>

