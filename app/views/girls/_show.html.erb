<div id="sub-menu" class="sticky-top">
    <%= render 'girl_header' %>
</div>
<div id="container-info-girl" class="container-girls">
    <%= render 'girl_show' %>
</div>


<div class="container-content">

    <div class="form-perfil d-flex justify-content-start">
        <button type="button" class="btn btn-light" data-bs-toggle="modal" data-bs-target="#modal-perfil">
            Editar Perfil
        </button>
    </div>

    <div class="row">
        <div class="col-sm-12 col-md-5">
            <!-- Detalles -->
    
            <div class="form-details">
                <h3>Informaci√≥n</h3>
                <div class="">
                    <%= render "details"%>
                </div>
    
            </div>
            <!-- Gallery -->
            <div id="box-img-thumb" class="form-details sticky-md-top" style="top: 60px;">
                <h3>Fotos</h3>
                
                <div id="gallery-images-girl" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <%= image_tag(@gallery_first, class:'d-block w-100') %>
                        </div>
                        
                        <% @gallery.each do |img| %>
                            <div class="carousel-item">
                                <%= image_tag(img, class:'d-block w-100') %>
                            </div>
                        <%end%>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
                    
    
            </div>
        </div>

        <div class="col-sm-12 col-md-7">
            <%= render 'girls/modules/add_publication' %>
            <div id="box-published">
                <%= render "./posts/post" %>
            </div>
        </div>
    </div>
</div>

<!-- footer -->
    
    <!-- modals -->
    <%= render 'girls/modals/modal_perfil' %>
    <%= render 'girls/modals/modal_details' %>
    <%= render './comments/modal_comments' %>