<div class="form-details form-profile">
    <div class="d-flex align-items-center">
        <%= image_tag(@girl.avatar_url(:thumb), class:'img-circle-avatar') if @girl.avatar? %>
        <div class="btn btn-light" data-bs-toggle="modal" data-bs-target="#modal-publish">¿Qué estás pensando</div>
    </div>
    <hr>
    <div class="d-flex align-items-center justify-content-between">
        <div data-button="post_video" class="btn btn-light btn-white d-flex align-items-center justify-content-center button-add-publication">
            <%= inline_svg_tag('icons/icon_video.svg', class:'me-2') %>
            Video
        </div>
        <div data-button="post_img" class="btn btn-light btn-white d-flex align-items-center justify-content-center button-add-publication">
            <%= inline_svg_tag('icons/icon_img.svg', class:'me-2') %>
            Foto
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modal-publish" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered ">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Agregar Publicación</h5>
                <button type="button" class="btn btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <%= render './posts/form'%>
        </div>
    </div>
</div>