<!-- header -->
<div id="sub-menu" class="sticky-top">
    <div class="sub-sub-menu mx-auto py-2 mx-2 b-bottom" >
        <div class="d-flex justify-content-between">
            <div class="back">
                <%= link_to dashboard_index_url, class:'btn btn-light' do %>
                    <%= inline_svg_tag 'icons/icon_chevron_left.svg' %>
                <%end%>
            </div>
            <div class="d-flex align-items-center justify-content-between back">
                <a href="" class="btn btn-light">
                    <%= inline_svg_tag 'icons/heart.svg' %>
                </a>
                <a href="tel:+56<%= @girl.try(:phone) %>" class="btn btn-light">
                    <%= inline_svg_tag 'icons/phone.svg' %>
                </a>
                <a href="https://wa.me/+56<%= @girl.try(:phone) %>?text=Hola%20<%= @girl.name.titleize %>%20te%20hablo%20desde%20UrbanSex.cl,%20estas%20disponible?" target="_blank" class="circle btn btn-light ">
                    <%= inline_svg_tag('icons/icon_whatsapp.svg', class:'icon-whatsapp') %>
                </a>
            </div>
        </div>
    </div>
</div>
<div class="container-girls">

    
    <!-- content -->

    
    
    <!-- imagen -->
    <picture class="picture-portada d-flex justify-content-center">
        <%= image_tag(@girl.portada_url(:medium), class:'portada') %>
        <%= image_tag(@girl.avatar_url(:thumb), class:'img-circle') if @girl.avatar? %>
    </picture>
    <div class="d-flex justify-content-center flex-wrap pb-3">
        
    
        <!-- datos -->
    
        <div class="informacion">
            <div class="name">
                <%= @girl.name.upcase %>
            </div>
            <div class="direction">
                <%= inline_svg_tag('icons/map-pin.svg') %>
                    <%= @girl.address %>
            </div>
            <div class="edad">
                <%= @girl.edad ?  "#{@girl.edad} aÃ±os" : "" %><%= @girl.nacionalidad ? ', ' + @girl.nacionalidad.capitalize : '' %>
            </div>
            <div class="atencion">
                <%= @girl.horario %>
            </div>
            <div class="precio">
                <% if @girl.price == 'a consultar' %>
                    Valor a consultar
                <% else %>
                    Valor desde $<%= number_with_delimiter @girl.price.to_i, delimiter:'.' %>
                <% end %>
            </div>
            
        </div>
        
    </div>
    <% if @girl.description.present? %>
        <div class="description border-top d-flex justify-content-center flex-wrap">
            <h2>
                <%= @girl.description %>
            </h2>
        </div>
    <% end %>
</div>