<ul class="nav nav-tabs justify-content-center" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="info-tab" data-bs-toggle="tab" data-bs-target="#info" type="button" role="tab" aria-controls="info" aria-selected="true"><i class="bi bi-info-square"></i> Info</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false"><i class="bi bi-briefcase"></i> Servicios</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false"><i class="bi bi-file-medical"></i> Salud</button>
    </li>
  </ul>
  <div class="tab-content" id="myTabContent" style="min-height: 225px;">
    <div class="tab-pane fade show active p-3" id="info" role="tabpanel" aria-labelledby="info-tab">
        <% if @girl.edad? %>
            <strong>Edad:</strong> <span><%= @girl.edad %> años</span><br>
        <% end %>
        <% if @girl.kilos? %>
            <strong>Peso:</strong> <span><%= @girl.kilos %> kg.</span><br>
        <% end %>
        <% if @girl.estatura? %>
            <strong>Estatura:</strong> <span>1.<%= @girl.estatura %> mts.</span><br>
        <% end %>
        <% if @girl.busto? && @girl.cintura? && @girl.cadera? %>
            <strong>Medidas:</strong> <span><%= @girl.busto %></span>-<span><%= @girl.cintura %></span>-<span><%= @girl.cadera %></span><br>
        <% end %>
        <% if @girl.cabello? %>
            <strong>Cabello:</strong> <span><%= @girl.cabello %></span><br>
        <% end %>
        <% if @girl.ojos? %>
            <strong>Ojos:</strong> <span><%= @girl.ojos %></span><br>
        <% end %>
        <% if @girl.depilacion? %>
            <strong>Depilación:</strong> <span><%= @girl.depilacion %></span><br>
        <% end %>
        <% if @girl.modalidad? %>
            <strong>Atención en:</strong> <span><%= @girl.modalidad %></span><br>
        <% end %>
    </div>
    <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
        
    </div>
    <div class="tab-pane fade p-3 text-center" id="profile" role="tabpanel" aria-labelledby="profile-tab">
        <h1>Cuidado COVID:</h1>  
        <p>Mascarilla, Alcohol gel, Toallas desechables</p> 
    </div>
  </div>
  
 
  

