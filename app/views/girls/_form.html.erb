      <div class="form-group">
        <%= form.label :description, ' Descripción' %>
          <%= form.text_area :description, class:'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :avatar, 'Descripción' %>
          <%= form.file_field :avatar, class:'form-control' %>
      </div>

