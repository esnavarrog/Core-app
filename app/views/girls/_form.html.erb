<%= form_with(model: @girl) do |form| %>
      <div class="avatar-form d-flex justify-content-center">
        <%= image_tag(@girl.avatar_url(:thumb), class:'img-circle-form') if @girl.avatar? %>
      </div>
      <div class="form-group">

        <%= form.label :avatar, 'Avatar' %>
          <%= form.file_field :avatar, class:'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :portada %>
          <%= form.file_field :portada, class:'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :name, 'Seudónimo Artístico' %>
          <%= form.text_field :name, class:'form-control' %>
      </div>
      
      <div class="form-group">
        <%= form.label :address, 'Dirección Cercana' %>
          <%= form.text_field :address, class:'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :price, 'Precio' %>
        <select name="girl[price]" id="precio-hora" class="form-control">
          <option value="A consultar">A Consultar</option>
          <% Girl::PRICE_LIST.each do |price| %>
            <option value="<%= price %>" <%= price == @girl.price ? 'selected="selected"' : '' %> ><%= number_with_delimiter(price, delimiter:'.') %></option>
          <% end %>
        </select>
      </div>

      <div class="form-group">
        <label for="girl_service_type">Que servicio brindas?</label>
        <select name="girl[service_type]" id="girl_service_type"  class="form-control">
          <option value="escort">Escort</option>
          <option value="massage">Masajista</option>
          <option value="virtual">Servicios Virtuales</option>
        </select>
      </div>
      <div class="form-group">
        <%= form.label :description, ' Descripción' %>
          <%= form.text_area :description, class:'form-control' %>
      </div>

      

      <div class="actions">
        <%= form.submit %>
      </div>
      <% end %>