<div class="grid-item public d-flex justify-content-center">
    <div class="img">
        <div class="img-item">
            <%= link_to image_tag(girl.avatar_url(:medium)), girl %>
            <div class="title-card">
                <h5 class="name"><%= girl.name.titleize %> </h5>
                <h6 class="address"><%= girl.address ? girl.address.titleize : '' %></h6>
            </div>
        </div>
    </div>
</div>
