<div class="grid-item public d-flex justify-content-center">
    <div class="img">
        <div class="img-item">
            <%= link_to image_tag(girl.avatar_url(:medium)), girl %>
            <div class="title-card">
                <h5 class="name"><%= girl.name.titleize %> </h5>
                <h6 class="address"><%= girl.address ? girl.address.titleize : '' %></h6>
            </div>
            <% if girl.service_type == 'massage' %>
            <div class="label-leyenda-girl">
                <%= inline_svg_tag("icons/icon_massage.svg", class:'icon-girl-service') %>
                Masajista
            </div>
            <% elsif girl.service_type == 'virtual' %>
            <div class="label-leyenda-girl">
                <%= inline_svg_tag("icons/icon_virtual_service.svg", class:'icon-girl-service') %>
                S.Virtual
            </div>
            <% end %>
        </div>
    </div>
</div>
