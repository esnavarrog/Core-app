<div class="container container-girls-session">
  <div class="card my-3">
    <div class="card-header d-flex justify-content-center align-content-center">
      <h2 class="mb-0">Crear Cuenta</h2>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="form-group mb-3">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control' %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :nickname %><br />
          <%= f.text_field :nickname, autocomplete: false, class:'form-control' %>
        </div>
        <div class="form-group mb-3">
          <%= f.label :avatar, class:'btn btn-primary button-upload d-flex align-items-center justify-content-center' do %>
          <i class="bi bi-upload me-2"></i> Sube tu avatar
          <% end %>
              
          <%= f.file_field :avatar, class:'d-none' %>

        </div>

        <div class="form-group mb-3">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(mÃ­nimo <%= @minimum_password_length %> caracteres)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class:'form-control' %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-control' %>
        </div>

        <%= flash[:recaptcha_error] %>
        <%= recaptcha_tags %>
        
        <div class="d-grid mb-3 mt-3">
          <%= f.submit "Crear Cuenta", class:'btn btn-primary btn-lg' %>
        </div>
      <% end %>

    </div>
  </div>
  <div class="d-flex justify-content-between link-bottom-users align-items-center">
    <%= render "users/shared/links" %>
    <%= link_to :root do %>
      <%= inline_svg_tag('icons/icon_arrow_left.svg') %>
      Volver al Home
    <% end %>
  </div>
</div>
