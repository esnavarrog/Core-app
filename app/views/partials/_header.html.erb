                    </li>
                <% end %>
                <hr>
                <li>
                    <a href="" class="dropdown-item"><i class="bi bi-bell"></i> Legal</a>
                </li>
                <li>
                    <a href="" class="dropdown-item"><i class="bi bi-book"></i> Blog</a>
                </li>
                <li>
                    <a href="" class="dropdown-item"><i class="bi bi-cloud-upload"></i> Publica tu Anuncio</a>
                </li>
            </ul>
        </div>
        
    </div>
