                <i class="bi bi-menu-down"></i>
            </button>
            <ul class="dropdown-menu dropdown-menu-nav fade">
                <% if user_signed_in? %>
                    <li>
                        <%= link_to edit_registration_path(current_user), class:'dropdown-item' do %>
